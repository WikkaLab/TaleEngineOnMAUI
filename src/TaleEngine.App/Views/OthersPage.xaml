<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TaleEngine.App.ViewModels"
             x:DataType="viewmodel:OtherViewModel"
             x:Class="TaleEngine.App.Views.OthersPage"
             Title="{Binding Title}">
    <VerticalStackLayout
        Spacing="25"
        Padding="30, 0"
        VerticalOptions="Center">
        <Button Command="{Binding OpenFilePickerCommand}"
                Text="Choose a file"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        <Button Command="{Binding CheckConnectivityCommand}"
                Text="Check connectivity"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>